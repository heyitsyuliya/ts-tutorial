{
  "compilerOptions": {
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
  ]
}
